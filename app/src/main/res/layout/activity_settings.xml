<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general"
    tools:context=".Settings">

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="259dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blue_button"
        android:text="CHANGE PASSWORD"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_change_phone"
        app:layout_constraintEnd_toEndOf="@+id/btn_change_phone"
        app:layout_constraintStart_toStartOf="@+id/btn_change_phone"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_settings_to_menu"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="157dp"
        android:background="@drawable/red_button"
        android:text="BACK TO MAIN MENU"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_email" />

    <Button
        android:id="@+id/btn_change_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/blue_button"
        android:text="CHANGE E-MAIL"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_settings_to_menu"
        app:layout_constraintEnd_toEndOf="@+id/btn_back_settings_to_menu"
        app:layout_constraintStart_toStartOf="@+id/btn_back_settings_to_menu"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_phone" />

    <Button
        android:id="@+id/btn_change_phone"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/blue_button"
        android:text="CHANGE PHONE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_change_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_password" />

</androidx.constraintlayout.widget.ConstraintLayout>
