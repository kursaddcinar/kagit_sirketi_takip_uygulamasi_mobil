<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general"
    tools:context=".Customers">

    <Button
        android:id="@+id/btn_add_customer"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:text="ADD CUSTOMER"
        android:background="@drawable/blue_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete_customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_update_customer" />

    <Button
        android:id="@+id/btn_list_customer"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="169dp"
        android:layout_marginBottom="17dp"
        android:text="LIST TO CUSTOMERS"
        android:background="@drawable/blue_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_update_customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_update_customer"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:text="UPDATE CUSTOMER"
        android:background="@drawable/blue_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_list_customer" />

    <Button
        android:id="@+id/btn_delete_customer"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:text="DELETE CUSTOMER"
        android:background="@drawable/blue_button"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_customer_to_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_customer" />

    <Button
        android:id="@+id/btn_back_customer_to_menu"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="138dp"
        android:background="@drawable/red_button"
        android:text="BACK TO MAIN MENU"
        android:textColor="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete_customer" />
</androidx.constraintlayout.widget.ConstraintLayout>
