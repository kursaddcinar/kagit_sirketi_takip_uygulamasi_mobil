<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@drawable/general">

    <Button
        android:id="@+id/btn_costumer"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blue_button"
        android:text="CUSTOMERS"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txt_bonus"
        app:layout_constraintEnd_toEndOf="@+id/txt_bonus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_bonus"
        app:layout_constraintTop_toBottomOf="@+id/btn_list_product" />

    <Button
        android:id="@+id/btn_list_product"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/blue_button"
        android:text="LIST PRODUCTS"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_costumer"
        app:layout_constraintEnd_toEndOf="@+id/btn_costumer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_costumer"
        app:layout_constraintTop_toBottomOf="@+id/btn_order" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="213dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/blue_button"
        android:text="ORDERS"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_list_product"
        app:layout_constraintEnd_toEndOf="@+id/btn_list_product"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_list_product"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/red_button"
        android:text="EXIT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_setting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_setting"
        app:layout_constraintTop_toBottomOf="@+id/btn_setting" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/blue_button"
        android:text="SETTINGS"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_bonus" />

    <TextView
        android:id="@+id/txt_bonus"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="11dp"
        android:background="#60FF76"
        android:gravity="center_vertical"
        android:text="TOTAL BONUS:"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_setting"
        app:layout_constraintEnd_toEndOf="@+id/btn_setting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_setting"
        app:layout_constraintTop_toBottomOf="@+id/btn_costumer" />

</androidx.constraintlayout.widget.ConstraintLayout>
