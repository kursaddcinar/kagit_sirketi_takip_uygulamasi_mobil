<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderCancel"
    android:background="@drawable/listpicture">

    <Button
        android:id="@+id/btn_calcelOrder"
        style="@drawable/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginBottom="11dp"
        android:text="CANCEL ORDER"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancelToOrders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Order_id_cancelorder" />

    <Button
        android:id="@+id/btn_cancelToOrders"
        style="@drawable/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="142dp"
        android:text="BACK TO ORDERS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calcelOrder" />

    <ListView
        android:id="@+id/listView_Orders_cancelorders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/listviewback" />

    <EditText
        android:id="@+id/txt_Order_id_cancelorder"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_calcelOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:background="@drawable/edittext_border"
        android:hint="Enter Order ID" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="4dp"
        android:text="ORDER ID"
        app:layout_constraintBottom_toTopOf="@+id/txt_Order_id_cancelorder"
        app:layout_constraintEnd_toEndOf="@+id/txt_Order_id_cancelorder"
        app:layout_constraintStart_toStartOf="@+id/txt_Order_id_cancelorder"
        app:layout_constraintTop_toBottomOf="@+id/listView_Orders_cancelorders" />

</androidx.constraintlayout.widget.ConstraintLayout>
