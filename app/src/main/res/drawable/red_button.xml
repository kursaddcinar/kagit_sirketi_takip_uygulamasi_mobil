<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Koyu kırmızı renk -->
            <corners android:radius="12dp" /> <!-- Köşeleri yuvarlat -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CDB10B0B" /> <!-- Normal kırmızı renk -->
            <corners android:radius="12dp" /> <!-- Köşeleri yuvarlat -->
        </shape>
    </item>
</selector>
